<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="LightStatusBarTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
    </style>

    <style name="OpenAdOverlayTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <!-- End of themes -->

    <!-- Toolbar -->
    <style name="ToolBarStyle">
        <item name="android:theme">@style/Theme.AppCompat.DayNight.DarkActionBar</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <!--<item name="android:paddingTop">@dimen/dimen_4x</item>-->
        <!--        <item name="android:contentInsetEnd">@dimen/zero</item>-->
        <!--        <item name="contentInsetEnd">@dimen/zero</item>-->
        <!--        <item name="contentInsetEndWithActions">@dimen/zero</item>-->
        <!--        <item name="android:contentInsetStart">@dimen/zero</item>-->
        <item name="contentInsetStart">@dimen/dimen_0</item>
        <item name="contentInsetStartWithNavigation">@dimen/dimen_0</item>
        <item name="popupTheme">@style/PopupMenu</item>
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
    </style>

    <style name="ToolBarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <!-- End of Toolbar -->

    <!-- Button styles -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">@dimen/dimen_12</item>
        <item name="android:paddingTop">@dimen/dimen_12</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/btn_accent</item>
    </style>

    <style name="Button.AccentRadius16">
        <item name="android:background">@drawable/btn_accent_radius_16</item>
    </style>

    <style name="Button.WhiteRadius16">
        <item name="android:background">@drawable/btn_white_radius_16</item>
    </style>
    <!-- End of button -->

    <!-- Textview -->
    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <!-- End of Textview -->

    <!-- EditText -->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:gravity">center_vertical</item>
        <!--        <item name="android:background">@drawable/bg_edittext</item>-->
        <item name="android:minHeight">@dimen/dimen_40</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingStart">@dimen/dimen_12</item>
        <item name="android:paddingEnd">@dimen/dimen_12</item>
    </style>

    <style name="EditText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="EditText.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditText.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <!-- End of EditText -->

    <!-- Navigation View -->
    <style name="NavigationDrawerTheme" parent="AppTheme">
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/dimen_65</item>
        <item name="listPreferredItemHeightSmall">@dimen/dimen_65</item>
    </style>

    <style name="NavigationDrawerStyle">
        <!--        <item name="android:listDivider">@drawable/divider_nav_group</item>-->

        <!-- item size in menu-->
        <!--<item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>-->

        <!-- item padding left in menu-->
        <!--<item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>-->

        <!-- item padding right in menu-->
        <!--<item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>-->
        <item name="itemTextColor">#323232</item>
        <!--        <item name="itemIconSize">@dimen/dimen_28</item>-->
        <item name="itemIconTint">@null</item>
        <item name="itemTextAppearance">@style/NavItemTextAppearance</item>
    </style>

    <style name="NavItemTextAppearance">
        <item name="android:textSize">@dimen/text_16</item><!-- text size in menu-->
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
    <!-- End of Navigation View -->

    <!-- TabLayout -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/dimen_3</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:elevation">@dimen/dimen_4</item>
        <item name="tabPaddingStart">@dimen/dimen_8</item>
        <item name="tabPaddingEnd">@dimen/dimen_8</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TabTextAppearance.LargeFont">
        <item name="android:textSize">@dimen/text_18</item>
    </style>
    <!-- End of TabLayout -->

    <!-- BottomSheetDialog -->
    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
    <!-- End of BottomSheetDialog -->

    <!-- PopupMenu -->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/transparent</item>
        <!--        <item name="android:itemBackground">@drawable/btn_primary</item>-->
        <!--        <item name="android:textColor">@color/textColorPrimary</item>-->
    </style>
    <!-- End of PopupMenu -->
</resources>
